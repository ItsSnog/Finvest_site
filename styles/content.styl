.content
  .slider_menu
    .carousel-inner
      padding-bottom 20px
      .item
        .carousel-caption
          padding-bottom 100px
          @media screen and (max-width: 1199px)
            padding-bottom 50px
        .about_news
          position relative
          top 130px
          @media screen and (max-width: 1199px)
            top 80px
          a
            padding 10px 60px
            background #38394c
            color white
            text-decoration none
            border-radius 5px
  .right, .left
    background none
    i
      margin-top 100%
  .services
    margin-top 20px
    @media screen and (max-width: 768px)
      margin 0
    .service
      display flex
      flex-wrap wrap
      .second
        border-left none
        border-right none
        @media screen and (max-width: 768px)
          border 1px solid #eee
          border-bottom none
          border-top none
      & > div
        display flex
        justify-content center
        align-self center
        height 250px
        width 33.33%
        @media screen and (max-width: 768px)
          width 60%
          margin auto
        border 1px solid #eee
        text-align center
        .caption
          align-self center
  .feedback
    margin-top 30px
    .feedback_container
      border 1px solid #eee
      text-align center
      p
        margin-bottom 20px
        margin-top 15px
        color #aeaeb4
      h3
        margin 30px 0 0 0
        color #38394c
      form
        p
          margin-top 25px
        .form-group
          margin-bottom 20px
          input
            padding 15px 20px
            width 90%
            margin auto
        .btn
          margin-bottom 20px
          color white
          padding 5px 50px
          background #38394c
  .news-info
    .news, .info
      h1
        overflow hidden
        margin 20px
        &:before, &:after
          content ''
          display inline-block
          vertical-align middle
          box-sizing border-box
          width 10%
          height 1px
          background #eee
          border solid #fff
          border-width 0 10px
        &:before
          margin-left -50%
        &:after
          margin-right -50%
        
 @media screen and (max-width: 600px)
   .slider_menu
     display none
        